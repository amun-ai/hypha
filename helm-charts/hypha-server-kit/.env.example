# Hypha Server Configuration
HYPHA_HOST=0.0.0.0
HYPHA_PORT=9520
HYPHA_PUBLIC_BASE_URL=https://hypha.example.com
HYPHA_JWT_SECRET=your-super-secret-jwt-key-change-this
HYPHA_LOGLEVEL=INFO

# Database Configuration
# For PostgreSQL
HYPHA_DATABASE_URI=postgresql://hypha:password@postgresql:5432/hypha_db
# For SQLite (default)
# HYPHA_DATABASE_URI=sqlite:////data/hypha.db

# Redis Configuration
HYPHA_REDIS_URI=redis://:password@redis:6379/0
# HYPHA_RESET_REDIS=true  # Reset Redis on startup (use with caution)

# S3/MinIO Configuration
HYPHA_ENABLE_S3=true
HYPHA_ENDPOINT_URL=http://minio:9000
HYPHA_ENDPOINT_URL_PUBLIC=https://s3.example.com
HYPHA_S3_ADMIN_TYPE=generic  # or "minio" for MinIO-specific features
HYPHA_ENABLE_S3_PROXY=true
HYPHA_ACCESS_KEY_ID=admin
HYPHA_SECRET_ACCESS_KEY=changeme123

# Feature Flags
HYPHA_ENABLE_SERVER_APPS=true
HYPHA_ENABLE_MCP=true  # Model Context Protocol
HYPHA_ENABLE_A2A=true  # App-to-App communication
# HYPHA_ENABLE_SERVICE_SEARCH=true

# Optional: Authentication providers
# HYPHA_AUTH_GITHUB_CLIENT_ID=your-github-client-id
# HYPHA_AUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
# HYPHA_AUTH_GOOGLE_CLIENT_ID=your-google-client-id
# HYPHA_AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Auth0 configuration (for custom auth0 account)
# HYPHA_AUTH0_DOMAIN=your-tenant.auth0.com
# HYPHA_AUTH0_CLIENT_ID=your-auth0-client-id
# HYPHA_AUTH0_CLIENT_SECRET=your-auth0-client-secret
# HYPHA_AUTH0_AUDIENCE=https://your-api-identifier

# Optional: Email configuration
# HYPHA_SMTP_HOST=smtp.gmail.com
# HYPHA_SMTP_PORT=587
# HYPHA_SMTP_USER=your-email@gmail.com
# HYPHA_SMTP_PASSWORD=your-app-password

# Optional: Advanced settings
# HYPHA_MAX_UPLOAD_SIZE=100m
# HYPHA_ENABLE_TELEMETRY=false
# HYPHA_WORKER_THREADS=4
# HYPHA_MAX_CONNECTIONS=1000