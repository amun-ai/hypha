# Hypha Docker Compose Configuration
# Copy this file to .env and adjust the values for your deployment

# Core Hypha Configuration
HYPHA_JWT_SECRET=change_this_to_a_secure_random_string_minimum_32_characters
HYPHA_HOST=0.0.0.0
HYPHA_PORT=9527
HYPHA_PUBLIC_BASE_URL=http://localhost:9527
HYPHA_LOGLEVEL=INFO

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
POSTGRES_DB=hypha_db
POSTGRES_PORT=5432
POSTGRES_DATA_DIR=./data/postgres

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_PORT=6379
REDIS_DATA_DIR=./data/redis
HYPHA_RESET_REDIS=false

# MinIO S3 Storage Configuration
HYPHA_ACCESS_KEY_ID=minioadmin
HYPHA_SECRET_ACCESS_KEY=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DATA_DIR=./data/minio
HYPHA_ENDPOINT_URL_PUBLIC=http://localhost:9000
HYPHA_WORKSPACE_BUCKET=hypha-workspaces

# Hypha Data Directory
HYPHA_DATA_DIR=./data/hypha

# Optional: Feature Flags
HYPHA_ENABLE_SERVICE_SEARCH=false

# Optional: Advanced Configuration
# HYPHA_STARTUP_FUNCTIONS=
# HYPHA_STATIC_MOUNTS=
# HYPHA_TRITON_SERVERS=
# HYPHA_S3_CLEANUP_PERIOD=24

# Production Notes:
# 1. Change all default passwords above
# 2. Generate a secure JWT secret (32+ characters)
# 3. Update HYPHA_PUBLIC_BASE_URL to your domain
# 4. Update HYPHA_ENDPOINT_URL_PUBLIC for external S3 access
# 5. Consider using Docker secrets for sensitive data in production 